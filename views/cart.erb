<h2>Your cart:</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Qty</th>
    </tr>
  </thead>
  <tbody>
    <% total_price = 0 %>
    <% total_qty = 0 %>
    <% @items.each_with_index do |item, id| %>
      <tr>
        <th scope="row"><%= id + 1 %></th>
        <td><%= item[0].title %></td>
        <td><%= item[0].price %></td>
        <td><%= item[1] %></td>
      </tr>
      <% total_price += item[0].price * item[1].to_i %>
      <% total_qty += item[1].to_i %>
    <% end %>

    <tr>
      <th>Total</th>
      <td></td>
      <td><%= total_price %> Rub</td>
      <td><%= total_qty %></td>
    </tr>
  </tbody>
</table>

<form action="/place_order" method="post" role="form">

  <input name="order[orders_input]"type="hidden" class="form-control">

  <div class="form-group">
    <label for="">Ваше имя</label>
    <input name="order[name]"type="text" class="form-control">
  </div>

  <div class="form-group">
    <label for="">Ваш телефон</label>
    <input name="order[phone]" type="text" class="form-control">
  </div>

  <div class="form-group">
    <label for="">Ваш Адрес</label>
    <input name="order[address]" type="text" class="form-control">
  </div>

  <input type="submit" class="btn btn-success btn-lg" value="ORDER">

</form>
